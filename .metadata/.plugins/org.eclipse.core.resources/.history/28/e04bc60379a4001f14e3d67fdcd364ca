/*
 * Written by Ty Bennett  
 */
public class Bicycle {
	private String make;
	private Wheel FrontWheel;
	private Wheel BackWheel;
	private Frame Frame;
	
	public void setMake(String make)
	{
		if(make != null)
			this.make = make;
		else
			this.make = "none";
	}
	public void setFrontWheel(int diameter, float width)
	{
		if((diameter <= 55 || diameter >= 16) && (width <= 2.5 || width >= 1.0))
			FrontWheel = new Wheel(diameter, width);
		// otherwise it sets diameter to the default value of 16
		else
			 FrontWheel = new Wheel();
	}
	public void setBackWheel(int diameter, float width)
	{
		if((diameter <= 55 || diameter >= 16) && (width <= 2.5 || width >= 1.0))
			FrontWheel = new Wheel(diameter, width);
		// otherwise it sets diameter to the default value of 16
		else
			 FrontWheel = new Wheel();
	}
	public void setFrame(float size, String type)
	{
		if((size <= 60 || size >= 18.5) && (type != null && type.equals("Diamond") || type.equals("Step-Through") || type.equals("Truss") || type.equals("Penny-Farthing")))
			 Frame = new Frame(size, type);
		else
			Frame = new Frame();
			
	}
}
